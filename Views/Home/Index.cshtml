@model IEnumerable<webAppCroosSS.Models.Comments>
@{
    ViewData["Title"] = "Home Page";
}
<div style="font-family:Arial"></div>
<p>
    @Html.ActionLink("Create New","Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
    </tr>
    @foreach(var items in Model){
        <tr>
            <td>
                @Html.DisplayNameFor(modelItem => items.Name)
            </td>
            <td>
                @Html.Raw(items.Comment)
            </td>
            <td>
                @Html.ActionLink("Edit" ,"Edit", new {id = items.Id})|
                @Html.ActionLink("Details" ,"Details", new {id = items.Id})|
                @Html.ActionLink("Delete" ,"Delete", new {id = items.Id})|
            </td>
        </tr>
    }
</table>